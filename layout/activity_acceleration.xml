<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F1"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_acceleration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="com.example.hp.unitconverter.AccelerationActivity">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:hint="Foot"
            android:background="#FBFCFC"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/foot_spuare_text_box"
            android:inputType="number"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:hint="Gravity"
            android:background="#FBFCFC"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:layout_marginTop="395dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/standard_gravity_text_box"
            android:inputType="number"/>

        <TextView
            android:text="Foot:"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/meterSpuareConversion"
            android:layout_toRightOf="@+id/meterSpuareConversion"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/to_foot_in_meter" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:hint="Meter"
            android:background="#FBFCFC"
            android:padding="20dp"
            android:layout_marginTop="35dp"
            android:id="@+id/meterSpuareConversion"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/foot_spuare_text_box"
            android:layout_alignStart="@+id/foot_spuare_text_box"
            android:inputType="number"/>

        <TextView
            android:text="Meter:"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/to_meter_in_gravity"
            android:layout_below="@+id/to_foot_in_gravity"
            android:layout_alignLeft="@+id/to_foot_in_gravity"
            android:layout_alignStart="@+id/to_foot_in_gravity"
            android:layout_alignRight="@+id/to_foot_in_gravity"
            android:layout_alignEnd="@+id/to_foot_in_gravity" />

        <TextView
            android:text="Gravity:"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:padding="20dp"
            android:id="@+id/to_gravity_in_meter"
            android:layout_below="@+id/to_foot_in_meter"
            android:layout_alignLeft="@+id/to_foot_in_meter"
            android:layout_alignStart="@+id/to_foot_in_meter" />

        <TextView
            android:text="Meter:"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/to_meter_in_foot"
            android:layout_alignTop="@+id/foot_spuare_text_box"
            android:layout_alignLeft="@+id/to_gravity_in_meter"
            android:layout_alignStart="@+id/to_gravity_in_meter" />

        <TextView
            android:text="Gravity:"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/to_gravity_in_foot"
            android:layout_below="@+id/to_meter_in_foot"
            android:layout_alignLeft="@+id/to_meter_in_foot"
            android:layout_alignStart="@+id/to_meter_in_foot" />

        <TextView
            android:text="Foot:"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/to_foot_in_gravity"
            android:layout_alignTop="@+id/standard_gravity_text_box"
            android:layout_alignLeft="@+id/to_gravity_in_foot"
            android:layout_alignStart="@+id/to_gravity_in_foot" />


    </RelativeLayout>

</ScrollView>
