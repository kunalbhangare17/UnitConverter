<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.unitconverter.AverageActivity"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:hint="Enter Length = L"
        android:textSize="22sp"
        android:ems="10"
        android:id="@+id/number1"
        android:layout_weight="0.06" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:hint="Enter Breadth = B"
        android:textSize="22sp"
        android:ems="10"
        android:id="@+id/number2"
        android:layout_weight="0.06"
        />

    <Button
        android:text="Calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calculate"
        android:layout_weight="0.06"
        />

    <TextView
        android:text="Area= L*B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/A"
        android:layout_weight="0.06"
        />

    <TextView
        android:hint=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/area"
        android:layout_weight="0.06"
        />
    <TextView
        android:text="Perimeter= 2*L + 2*B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/P"
        android:layout_weight="0.06"
        />

    <TextView
        android:hint=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/peri"
        android:layout_weight="0.06"
        />
    <TextView
        android:text="Diagonal= sqrt(L²+B²)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/D"
        android:layout_weight="0.06"
        />
    <TextView
        android:hint=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/dia"
        android:layout_weight="0.06"
        />
    <TextView
        android:text="Ratio= L/B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/ra"
        android:layout_weight="0.06"
        />
    <TextView
        android:hint=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/rat"
        android:layout_weight="0.06"
        />

</LinearLayout>
