<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cylinder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hp.unitconverter.AverageActivity"
    android:weightSum="1"
    android:orientation="vertical"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:hint="Enter Radius (r)"
        android:textSize="22sp"
        android:ems="10"
        android:id="@+id/number1"
        android:layout_weight="0.06"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number|numberDecimal"
        android:hint="Enter Height (h)"
        android:textSize="22sp"
        android:ems="10"
        android:id="@+id/number2"
        android:layout_weight="0.06"
        />
    <Button
        android:text="Calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calculate"
        android:layout_weight="0.06"
        />

    <TextView
        android:text="Perimeter(a) = 2 * PI * r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/P"
        android:layout_weight="0.06"
        />

    <TextView
        android:hint=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/peri"
        android:layout_weight="0.06"
        />
    <TextView
        android:text="Base area(b) = PI * rÂ²"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/A"
        android:layout_weight="0.06"
        />

    <TextView
        android:hint=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/barea"
        android:layout_weight="0.06"
        />
    <TextView
        android:text="Lateral surface(c) = a * h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/L"
        android:layout_weight="0.06"
        />

    <TextView
        android:hint=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/lsurface"
        android:layout_weight="0.06"
        />
    <TextView
        android:text="Total area= 2 * b + c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/T"
        android:layout_weight="0.06"
        />

    <TextView
        android:hint=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/tarea"
        android:layout_weight="0.06"
        />
    <TextView
        android:text="Volume= b * h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/V"
        android:layout_weight="0.06"
        />

    <TextView
        android:hint=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:id="@+id/vol"
        android:layout_weight="0.06"
        />

</LinearLayout>
