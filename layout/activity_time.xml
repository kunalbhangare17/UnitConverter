<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF0F1"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_acceleration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context="com.example.hp.unitconverter.AccelerationActivity">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hour"
            android:background="#FBFCFC"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:layout_marginTop="610dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/hour_text_box"
            android:inputType="number"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Minute"
            android:background="#FBFCFC"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/Minute_text_box"
            android:inputType="number"/>

        <TextView
            android:text="mÂ²:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/meterSpuareConversion"
            android:layout_toRightOf="@+id/meterSpuareConversion"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/to_foot_in_meter" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Second"
            android:background="#FBFCFC"
            android:padding="20dp"
            android:layout_marginTop="15dp"
            android:id="@+id/Second_text_box"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/foot_spuare_text_box"
            android:layout_alignStart="@+id/foot_spuare_text_box" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Days"
            android:background="#FBFCFC"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:layout_marginTop="890dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="50dp"
            android:inputType="number"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/foot_spuare_text_box"
            android:layout_alignStart="@+id/foot_spuare_text_box"
            android:id="@+id/day_text_box" />

        <TextView
            android:text="Hour:"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/hour_in_second"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/minute_in_second"
            android:layout_alignLeft="@+id/minute_in_second"
            android:layout_alignStart="@+id/minute_in_second" />

        <TextView
            android:text="Minute:"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/minute_in_day"
            android:layout_below="@+id/hour_in_day"
            android:layout_alignLeft="@+id/minute_in_hour"
            android:layout_alignStart="@+id/minute_in_hour"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"/>

        <TextView
            android:text="Hour:"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/hour_in_day"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/second_in_day"
            android:layout_alignLeft="@+id/second_in_day"
            android:layout_alignStart="@+id/second_in_day" />

        <TextView
            android:text="Days:"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/day_in_hour"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/minute_in_hour"
            android:layout_alignLeft="@+id/second_in_hour"
            android:layout_alignStart="@+id/second_in_hour" />

        <TextView
            android:text="Minute:"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/minute_in_hour"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/hour_text_box"
            android:layout_alignLeft="@+id/day_in_hour"
            android:layout_alignStart="@+id/day_in_hour" />

        <TextView
            android:text="Days:"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:id="@+id/day_in_minute"
            android:layout_below="@+id/hour_in_minute"
            android:layout_alignLeft="@+id/hour_in_minute"
            android:layout_alignStart="@+id/hour_in_minute" />

        <TextView
            android:text="Days:"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/day_in_second"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/hour_in_second"
            android:layout_alignLeft="@+id/hour_in_second"
            android:layout_alignStart="@+id/hour_in_second" />

        <TextView
            android:text="Seconds:"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/second_in_minute"
            android:layout_alignTop="@+id/Minute_text_box"
            android:layout_alignLeft="@+id/day_in_second"
            android:layout_alignStart="@+id/day_in_second" />

        <TextView
            android:text="Seconds:"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/second_in_day"
            android:layout_alignBaseline="@+id/day_text_box"
            android:layout_alignBottom="@+id/day_text_box"
            android:layout_toRightOf="@+id/hour_text_box"
            android:layout_toEndOf="@+id/hour_text_box"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp" />

        <TextView
            android:text="Minute:"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/minute_in_second"
            android:layout_alignBaseline="@+id/Second_text_box"
            android:layout_alignBottom="@+id/Second_text_box"
            android:layout_alignLeft="@+id/second_in_day"
            android:layout_alignStart="@+id/second_in_day" />

        <TextView
            android:text="Seconds:"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/second_in_hour"
            android:layout_alignTop="@+id/hour_text_box"
            android:layout_alignLeft="@+id/day_in_minute"
            android:layout_alignStart="@+id/day_in_minute" />

        <TextView
            android:text="Hour:"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="17dp"
            android:id="@+id/hour_in_minute"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/Minute_text_box"
            android:layout_alignLeft="@+id/second_in_minute"
            android:layout_alignStart="@+id/second_in_minute" />


    </RelativeLayout>

</ScrollView>


